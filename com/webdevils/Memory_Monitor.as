package com.webdevils{	import flash.display.*;	import flash.events.*;	import flash.text.*;	import flash.system.*;	public class Memory_Monitor extends Sprite {		private var memory_txt:TextField;				public function Memory_Monitor() {			memory_txt = new TextField();			addChild( memory_txt );			addEventListener( Event.ENTER_FRAME, mem );		}				function mem( e:Event ):void {			var m:String = Number( System.totalMemory / 8 / 1024 / 1024 ).toFixed( 3 ) + 'MB';			memory_txt.text = m;		}	}}